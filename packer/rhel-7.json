{
    "variables": {
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "tenant_id": "{{env `ARM_TENANT_ID`}}",
        "managed_image_resource_group_name": "{{env `TF_RESOURCE_GROUP_NAME`}}",
        "managed_image_name": "{{env `TF_MANAGED_IMAGE_NAME_RHEL`}}",
        "ssh_user": "azureuser",
        "ssh_pass": "{{env `TF_INSTANCE_PASSWORD`}}"    
      },
    "builders": [{
      "type": "azure-arm",
  
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "tenant_id": "{{user `tenant_id`}}",
      "subscription_id": "{{user `subscription_id`}}",
  
      "managed_image_resource_group_name": "{{user `managed_image_resource_group_name`}}",
      "managed_image_name": "{{user `managed_image_name`}}",
  
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",

      "os_type": "Linux",
      "image_publisher": "Redhat",
      "image_offer": "RHEL",
      "image_sku": "7-LVM",
      "ssh_pty": "true",

      "winrm_username": "packer",
  
      "location": "East US",
      "vm_size": "Standard_E2s_v3"
    }],
    "provisioners": [
        {
          "type": "file",
          "source": "packer/inspec/inspec-a2-linux.json",
          "destination": "/tmp/inspec-a2-linux.json"
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "sleep 10",
                "curl https://raw.githubusercontent.com/habitat-sh/habitat/master/components/hab/install.sh | sudo bash",
                "sudo groupadd hab",
                "sudo useradd -g hab hab",
                "sudo hab license accept",
                "sudo hab pkg install effortless/config-baseline",
                "sudo hab pkg install effortless/audit-baseline",
                "cd $(hab pkg path effortless/config-baseline)",
                "echo 'Starting Chef Client Run'",
                "sudo hab pkg exec chef/chef-client chef-client -z -c config/bootstrap-config.rb",
                "echo 'Starting Inspec Run'",
                "cd `hab pkg path effortless/audit-baseline`",
                "sudo hab pkg exec chef/inspec inspec exec $(hab pkg path effortless/audit-baseline)/*.tar.gz --chef-license accept-no-persist --no-distinct-exit --json-config /tmp/inspec-a2-linux.json"
            ],
            "inline_shebang": "/bin/sh -x",
            "type": "shell"
        }]
  }
